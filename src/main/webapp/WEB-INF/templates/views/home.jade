- attributes("title") = "SmartMeal"
- attributes("headline") = "SmartMeal"
- attributes("page") = "home"

.row
	.jumbotron
		h1 Welcome to SmartMeal
	.well
		.row
			.col-md-6
				h1 Sign Up
				br
				form.form(action="/home" method="post")
					.form-group
						label(for="email") Email Address
						input.form-control(type="email" name="email" placeholder="Enter Email")
					.form-group
						label(for="password") Password
						input.form-control(type="password" name="password" placeholder="Enter Password")
					.form-group
						label(for="weight") Weight
						input.form-control(type="number" name="weight" placeholder="Enter Weight")
					.form-group
						label(for="age") Age
						input.form-control(type="number" name="age" placeholder="Enter Age")
					.form-group
						label(for="sex") Sex
						select.form-control(name="sex")
							option Male
							option Female
					.form-group-inline
						label(for="feet") Height
						input.form-control(type="number" name="feet" placeholder="Feet")
						input.form-control(type="number" name="inches" placeholder="Inches")
					br
					.form-group
						label(for="activity") Activity Level
						.radio
							label
								input(type="radio" name="activity" name="activity0" value="0")
								= "Sedentary"
						.radio
							label
								input(type="radio" name="activity" name="activity1" value="1")
								= "Light"
						.radio
							label
								input(type="radio" name="activity" name="activity2" value="2")
								= "Moderate"
						.radio
							label
								input(type="radio" name="activity" name="activity3" value="3")
								= "Extreme"
					button.btn.btn-default(type="submit") Submit
			.col-md-6
				h1 Login
				br
				.form-group
					label(for="email") Email Address
					input.form-control(type="email" name="email" placeholder="Enter Email")
				.form-group
					label(for="password") Password
					input.form-control(type="password" name="password" placeholder="Enter Password")
				button.btn.btn-default(type="login") Login





